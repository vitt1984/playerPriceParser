{
  "manifest_version": 2,
  "name": "Hattrick",
  "version": "1.0",

  "background": {
    "persistent": false,
    "scripts": ["pouchdb-5.4.5.js", "background.js"]
  },

  "content_scripts": [
    {
      "matches": ["https://*.hattrick.org/*"],
      "js": ["pouchdb-5.4.5.js", "constants.js", "transferSearch.js", "transferList.js", "transferPlayer.js", "transferBid.js", "windowManager.js"]
    }
  ],
  
  "permissions": [
    "activeTab",
    "tabs"
  ],

  "browser_action": {
    "default_title": "Hattrick"
  }
}